<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.4"
        android:background="@drawable/navigation_drawer_header"
        android:padding="@dimen/drawer_header_padding">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/drawer_item_user_profile_imageView"
            android:layout_width="@dimen/profile_image_size"
            android:layout_height="@dimen/profile_image_size"
            android:layout_above="@+id/drawer_item_username_textView" />

        <TextView
            android:id="@+id/drawer_item_username_textView"
            style="@style/medium_text_textview"
            android:layout_width="match_parent"
            android:layout_above="@+id/drawer_item_email_textView"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/drawer_item_email_textView"
            style="@style/medium_text_textview"
            android:layout_width="match_parent"
            android:layout_alignParentBottom="true"
            android:paddingBottom="@dimen/padding_large"
            android:textColor="@android:color/white"
            android:textSize="@dimen/text_size_medium" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.6"
        android:orientation="vertical">
        <TextView
            android:id="@+id/drawer_item_my_route_textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/my_route"
            android:gravity="center_vertical"
            android:drawablePadding="@dimen/padding_xlarge"
            android:padding="@dimen/padding_xlarge"
            android:drawableStart="@drawable/ic_action_my_location"
            android:drawableLeft="@drawable/ic_action_my_location"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/drawer_item_logout_textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/logout"
            android:gravity="center_vertical"
            android:drawablePadding="@dimen/padding_xlarge"
            android:padding="@dimen/padding_xlarge"
            android:drawableStart="@drawable/ic_action_logout"
            android:drawableLeft="@drawable/ic_action_logout"
            android:textStyle="bold" />
    </LinearLayout>
</LinearLayout>