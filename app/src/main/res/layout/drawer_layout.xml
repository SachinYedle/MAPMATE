<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/drawer_header_height"
        android:gravity="center"
        android:orientation="vertical"
        android:background="@color/drawer_header_color"
        android:padding="@dimen/drawer_header_padding">
        <TextView
            android:id="@+id/welcome_textView"
            style="@style/small_text_textview"
            android:text="@string/welcome"
            android:gravity="center"
            android:textColor="@android:color/white"/>

        <TextView
            android:id="@+id/drawer_user_name_textView"
            android:layout_width="match_parent"
            android:gravity="center"
            style="@style/medium_text_textview"
            android:textColor="@android:color/white"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/selected_contact_recyclerview"/>
    </LinearLayout>
</LinearLayout>